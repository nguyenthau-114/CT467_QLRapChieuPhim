<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.TimKiemNhanVienController"
      styleClass="popup-box">

    <Label text="Tìm kiếm nhân viên"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="12">

        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="60"/>
        </columnConstraints>

        <Label text="Mã nhân viên:" GridPane.rowIndex="0"/>
        <TextField fx:id="txtMaNV" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Tên nhân viên:" GridPane.rowIndex="1"/>
        <TextField fx:id="txtTenNV" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Chức vụ:" GridPane.rowIndex="2"/>
        <TextField fx:id="txtChucVu" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Số điện thoại:" GridPane.rowIndex="3"/>
        <TextField fx:id="txtSDT" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Email:" GridPane.rowIndex="4"/>
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <Button text="Tìm" fx:id="btnTim"
            onAction="#thucHienTim"
            style="-fx-background-color: #4caf50; -fx-text-fill: white;
                   -fx-font-weight: bold; -fx-padding: 6 16; -fx-background-radius: 6;" />

</VBox>
