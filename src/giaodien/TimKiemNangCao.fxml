<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.TimKiemNangCaoController"
      style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 12;">
      
    <Label text="Tìm kiếm suất chiếu"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="12">

        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="60"/>
        </columnConstraints>

        <Label text="Mã suất chiếu:" GridPane.rowIndex="0"/>
        <TextField fx:id="txtMaSuat" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Ngày chiếu:" GridPane.rowIndex="1"/>
        <DatePicker fx:id="dpNgay" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Phim:" GridPane.rowIndex="2"/>
        <ComboBox fx:id="cbPhim" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Phòng:" GridPane.rowIndex="3"/>
        <ComboBox fx:id="cbPhong" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Trạng thái:" GridPane.rowIndex="4"/>
        <ComboBox fx:id="cbTrangThai" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <Button text="Tìm" fx:id="btnTim"
            onAction="#thucHienTim"
            style="-fx-background-color: #4caf50; -fx-text-fill: white; 
                   -fx-font-weight: bold; -fx-padding: 6 16; -fx-background-radius: 6;" />

</VBox>
