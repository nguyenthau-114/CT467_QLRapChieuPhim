<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="800" stylesheets="@fxml.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" spacing="15" styleClass="login-box" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="200" AnchorPane.rightAnchor="200" AnchorPane.topAnchor="100">

            <children>
                <!-- Icon người -->
                <ImageView fx:id="avatarIcon" fitHeight="60" fitWidth="60" />

                <!-- Tiêu đề -->
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Đăng nhập" />

                <!-- Email -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Email" />
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <ImageView fx:id="mailIcon" fitHeight="18.0" fitWidth="18.0" />
                                <TextField fx:id="emailField" prefHeight="33.0" prefWidth="328.0" promptText="Nhập email" styleClass="text-field" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Mật khẩu -->
                <VBox alignment="CENTER_LEFT" spacing="5">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Mật khẩu" />
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <ImageView fx:id="lockIcon" fitHeight="18" fitWidth="18" />
                                <PasswordField fx:id="passwordField" prefHeight="33.0" prefWidth="403.0" promptText="Nhập mật khẩu" styleClass="text-field" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <!-- Nút đăng nhập -->
                <Button fx:id="loginButton" styleClass="login-button" text="Đăng nhập" />

                <!-- Đăng ký -->
                <Hyperlink text="Đăng ký tài khoản" />
            </children>
        </VBox>
    </children>
</AnchorPane>
