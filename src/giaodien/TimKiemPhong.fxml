<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" alignment="CENTER"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="main.TimKiemPhongController"
      style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 12;">

    <Label text="Tìm kiếm phòng chiếu"
           style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="12">

        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="60"/>
        </columnConstraints>

        <Label text="Mã phòng:" GridPane.rowIndex="0"/>
        <TextField fx:id="tfMaPhong" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Tên phòng:" GridPane.rowIndex="1"/>
        <TextField fx:id="tfTenPhong" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Số ghế (≥):" GridPane.rowIndex="2"/>
        <TextField fx:id="tfSoGhe" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Loại phòng:" GridPane.rowIndex="3"/>
        <TextField fx:id="tfLoaiPhong" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    </GridPane>

    <Button text="Tìm"
            onAction="#thucHienTim"
            style="-fx-background-color:#4caf50; -fx-text-fill:white;
                   -fx-font-weight:bold; -fx-padding:6 16; -fx-background-radius:6;" />

</VBox>
